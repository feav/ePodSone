<style type="text/css">
    button[type=submit]{float: right;}
</style>

{{ form_start(form) }}
    <div class="my-custom-class-for-errors">
        {{ form_errors(form) }}
    </div>

    <form>
        <div class="form-row mb-4">
            <div class="form-group col-md-12">
                <label for="inputEmail4">Parametre</label>
                 {{ form_widget(form.mkey, {'attr': {'class': 'form-control', 'placeholder':'Nom'}}) }} 
            </div>
        </div>
        <div class="form-row mb-4">
            <div class="form-group col-md-12">
                <label for="inputCity">Valeur</label>
                {{ form_widget(form.value, {'attr': {'class': 'form-control ckeditor', 'placeholder':'Quantite'}}) }} 
            </div>  
        </div>
        {{ form_widget(form._token) }}
        <button type="submit" class="btn btn-primary mt-3">{{ button_label|default('Ajout | Modification') }}</button>
    </form>
{{ form_end(form) }}
