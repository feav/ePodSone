{% block javascripts %}
	{{parent()}}
	<script type="text/javascript">
		function toggleMute() {
	        var video=document.getElementById("videoHeader");
	        if(video.muted){
	          video.muted = false;
	        } else {
	          debugger;
	          video.muted = true;
	        }
	        var sound = localStorage.getItem('sound');
	        localStorage.setItem('sound', !sound);
	    }
	</script>
