{% extends 'admin/layout.html.twig' %}
{% block title %} {{parent()}} | Abonnements {% endblock %}

{% block dataStructured %}{% endblock %}

{% block stylesheets %}
    {{parent()}}
    <link rel="stylesheet" type="text/css" href="{{asset('assetsBo/plugins/table/datatable/datatables.css')}}">
    <link rel="stylesheet" type="text/css" href="{{asset('assetsBo/plugins/table/datatable/custom_dt_html5.css')}}">
    <link rel="stylesheet" type="text/css" href="{{asset('assetsBo/plugins/table/datatable/dt-global_style.css')}}">
    <style type="text/css">
        .widget-content-area{box-shadow: none;}
    </style>
{% endblock %}
{% block title_page %}Abonnement{% endblock %}
{% block body_bo %}
    <div class="layout-px-spacing">
        <div class="row layout-top-spacing">
            <div class="col-12 layout-spacing">
                <div class="widget widget-chart-three">
                    <div class="widget-heading">
                        <div class="">
                            <h5 class="">List d'abonnements</h5>
                        </div>

                        <div class="dropdown  custom-dropdown">
                            <a class="dropdown-toggle" href="#" role="button" id="uniqueVisitors" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-more-horizontal"><circle cx="12" cy="12" r="1"></circle><circle cx="19" cy="12" r="1"></circle><circle cx="5" cy="12" r="1"></circle></svg>
                            </a>

                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="uniqueVisitors">
                                <a class="dropdown-item" href="{{ path('abonnement_new') }}">Ajouter</a>
                            </div>
                        </div>
                    </div>

                    <div class="widget-content widget-content-area br-6">
                        <div class="table-responsive mb-4 mt-4">
                            <table id="html5-extension" class="table table-hover non-hover" style="width:100%">
                                <thead>
                                   <tr>
                                        <th>Name</th>
                                        <th>Description</th>
                                        <th>Dur√©e</th>
                                        <th>Prix</th>
                                        <th>essaie</th>
                                        <th>actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for abonnement in abonnements %}
                                    <tr>
                                        <td><a class="dropdown-item" href="{{ path('abonnement_edit',{id:abonnement.id}) }}">{{ abonnement.name }}</a></td>
                                        <td>{{ abonnement.description }}</td>
                                        <td>{{ abonnement.duree }}</td>
                                        <td>{{ abonnement.price }} eur</td>
                                        <td>{{ abonnement.trialDay }}</td>
                                        <td>
                                            {{ include('abonnement/_delete_form.html.twig') }}
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

