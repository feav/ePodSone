<style type="text/css">
    button[type=submit]{float: right;}
</style>

{{ form_start(form) }}
    <div class="my-custom-class-for-errors">
        {{ form_errors(form) }}
    </div>

    <form>
        <div class="form-row mb-4">
            <div class="form-group col-md-6">
                <label for="inputEmail4">Utilisateur</label>
                 {{ form_widget(form.user, {'attr': {'class': 'form-control', 'placeholder':'Utilisateur'}}) }} 
            </div>
            <div class="form-group col-md-3">
                <label for="inputCity">Formule</label>
                {{ form_widget(form.formule, {'attr': {'class': 'form-control','type': 'decimal','required': false, 'placeholder':'Formule'}}) }} 
            </div>  
            <div class="form-group col-md-3">
                <label for="inputCity">Etat</label>
                {{ form_widget(form.state, {'attr': {'class': 'form-control','type': 'decimal','required': false, 'placeholder':'Cout de la Reduction'}}) }} 
            </div>  
        </div>
       
        <div class="form-row mb-4">
            <div class="form-group col-md-4">
                <label for="inputCity">Debut de validite</label>
                {{ form_widget(form.start, {'attr': {'placeholder':'Debut de validite'}}) }} 
            </div>
            <div class="form-group col-md-4">
                <label for="inputState">Expiration de l'abonnement</label>
                 {{ form_widget(form.end, {'attr': { 'placeholder':'Expiration du coupon'}}) }}
            </div>
            <div class="form-group col-md-4">
                <label for="inputState">Paiement </label>
                 {{ form_widget(form.panier, {'attr': {'class': 'form-control',  'placeholder':'Expiration du coupon'}}) }}
            </div>
        </div>
        {{ form_widget(form._token) }}
        <button type="submit" class="btn btn-primary mt-3">{{ button_label|default('Ajout | Modification') }}</button>
    </form>
{{ form_end(form) }}
