{% block body_bo %}
<div class="layout-px-spacing">
   <div class="row layout-top-spacing">
      <div class="col-12 layout-spacing">
         <div class="widget widget-chart-three">
            <div class="widget-heading">
               <div class="">
                  <h5 class="">List de Panier</h5>
               </div>
               <div class="dropdown  custom-dropdown">
                  <a class="dropdown-toggle" href="#" role="button" id="uniqueVisitors" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                     <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-more-horizontal">
                        <circle cx="12" cy="12" r="1"></circle>
                        <circle cx="19" cy="12" r="1"></circle>
                        <circle cx="5" cy="12" r="1"></circle>
                     </svg>
                  </a>
                  <div class="dropdown  custom-dropdown">
                     <a class="btn" href="{{ path('panier_new') }}">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-plus">
                           <line x1="12" y1="5" x2="12" y2="19"></line>
                           <line x1="5" y1="12" x2="19" y2="12"></line>
                        </svg>
                        Ajouter
                     </a>
                  </div>
               </div>
            </div>
            <div class="widget-content widget-content-area br-6">

              <div class="wrapper-export">
                  <div>Exporter les commandes</div>
                  <form class="form-inline" action="{{path('export_facture')}}" method="POST">
                      Du &nbsp<input type="date" name="date_debut" class="form-control dateTimeFlatpickr" required>&nbsp Au &nbsp
                      <input type="date" name="date_fin" class="form-control dateTimeFlatpickr" required>&nbsp
                      <button type="submit"  class="btn btn-primary"> Exporter</button>
                  </form>
              </div>

               <div class="table-responsive mb-4 mt-4">
                  <table id="html5-extension" class="table table-hover non-hover" style="width:100%">
                     <thead>
                        <tr>
                           <th>User</th>
                           <th>Emission</th>
                           <th>Prix de Livraison</th>
                           <th>Token</th>
                           <th>Cout Total</th>
                           <th>Remboursement</th>
                           <th>actions</th>
                        </tr>
                     </thead>
                     <tbody>
                        {% for panier in paniers %}
                        <tr>
                          <td>{{ panier.user.email }}</td>
                           <td>{{ panier.emmission ? panier.emmission|date('Y-m-d') : '' }}</td>
                           <td>{{ panier.priceShipping }}</td>
                           <td><div class="badge badge-warning">{{ panier.token }}</div></td>
                           <td>{{ panier.totalPrice }}</td>
                           <td>
                              {% if panier.remboursement == 1 %}
                                <a href="{{path('confirm_remboursement', {'id':panier.id})}}" style="color:#007bff">confirmer</a>
                              {% endif %}
                              {% if panier.remboursement == 2 %}
                                <span>Rembous√©</span>
                              {% endif %}
                           </td>
                           <td>
                              <a href="{{ path('panier_edit', {'id': panier.id}) }}">Editer</a>
                              {{ include('panier/_delete_form.html.twig') }}
                           </td>
                        </tr>
                        {% else %}
                        <tr>
                           <td colspan="6">Aucun element trouve</td>
                        </tr>
                        {% endfor %}
                     </tbody>
                  </table>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>
{% endblock %}
