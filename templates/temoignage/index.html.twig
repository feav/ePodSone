{% extends 'admin/layout.html.twig' %}
{% block title %} {{parent()}} | Temoignage {% endblock %}{% block stylesheets %}
    {{parent()}}
    <link rel="stylesheet" type="text/css" href="{{asset('assetsBo/plugins/table/datatable/datatables.css')}}">
    <link rel="stylesheet" type="text/css" href="{{asset('assetsBo/plugins/table/datatable/custom_dt_html5.css')}}">
    <link rel="stylesheet" type="text/css" href="{{asset('assetsBo/plugins/table/datatable/dt-global_style.css')}}">
    <style type="text/css">
        .widget-content-area{box-shadow: none;}
    </style>
{% endblock %}



{% block body_bo %}
    <div class="layout-px-spacing">
        <div class="row layout-top-spacing">
            <div class="col-12 layout-spacing">
                <div class="widget widget-chart-three">
                    <div class="widget-heading">
                        <div class="">
                            <h5 class="">List de Temoignage</h5>
                        </div>

                        <div class="dropdown  custom-dropdown">
                            <div class="dropdown  custom-dropdown">
                                <a class="btn" href="{{ path('temoignage_new') }}">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-plus"><line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line></svg> Ajouter
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="widget-content widget-content-area br-6">
                        <div class="table-responsive mb-4 mt-4">
                            <table id="html5-extension" class="table table-hover non-hover" style="width:100%">
                                <thead>
                                    <tr>
                                                                                    <th>Id</th>
                                                                                    <th>Creation</th>
                                                                                    <th>Name</th>
                                                                                    <th>Location</th>
                                                                                    <th>Video</th>
                                                                                    <th>Text</th>
                                                                                <th>actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                    {% for temoignage in temoignages %}
                                    <tr>
                                                            <td>{{ temoignage.id }}</td>
                                                                                <td>{{ temoignage.creation ? temoignage.creation|date('Y-m-d') : '' }}</td>
                                                                                <td>{{ temoignage.name }}</td>
                                                                                <td>{{ temoignage.location }}</td>
                                                                                <td>{{ temoignage.video }}</td>
                                                                                <td>{{ temoignage.text }}</td>
                                                                                <td>
                                            <a href="{{ path('temoignage_edit', {'id': temoignage.id}) }}">edit</a>
                                            {{ include('temoignage/_delete_form.html.twig') }}
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="7">Aucun element trouve</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}



